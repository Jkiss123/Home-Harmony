<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Voice Search Permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Biometric Authentication Permission -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:name=".CloudyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FurnitureCloudy"
        tools:targetApi="31">
        <activity
            android:name=".present.ShoppingActivity"
            android:exported="false" />
        <activity
            android:name=".present.LoginRegisterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Lock Screen Activity for Session Timeout -->
        <activity
            android:name=".present.LockScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.FurnitureCloudy"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- Fake Data Manager Activity (Development only) -->
        <activity
            android:name=".present.FakeDataManagerActivity"
            android:exported="true"
            android:theme="@style/Theme.FurnitureCloudy">
            <!-- Allow opening via adb -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Performance Demo Activity (Development only) -->
        <activity
            android:name=".present.demo.PerformanceDemoActivity"
            android:exported="true"
            android:theme="@style/Theme.FurnitureCloudy">
            <!-- Allow opening via adb -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>