<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Voice Search Permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Biometric Authentication Permission -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- Notification Permission (Android 13+) for WorkManager notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Foreground Service Permissions (Android 14+) for WorkManager -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <application
        android:name=".CloudyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FurnitureCloudy"
        tools:targetApi="31">
        <activity
            android:name=".present.ShoppingActivity"
            android:exported="false" />
        <activity
            android:name=".present.LoginRegisterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Lock Screen Activity for Session Timeout -->
        <activity
            android:name=".present.LockScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.FurnitureCloudy"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- Fake Data Manager Activity (Development only) -->
        <activity
            android:name=".present.FakeDataManagerActivity"
            android:exported="true"
            android:theme="@style/Theme.FurnitureCloudy">
            <!-- Allow opening via adb -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Performance Demo Activity (Development only) -->
        <activity
            android:name=".present.demo.PerformanceDemoActivity"
            android:exported="true"
            android:theme="@style/Theme.FurnitureCloudy">
            <!-- Allow opening via adb -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- FileProvider for sharing exported CSV files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- WorkManager Foreground Service (Android 14+) -->
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:foregroundServiceType="dataSync"
            android:exported="false"
            tools:node="merge" />
    </application>

</manifest>