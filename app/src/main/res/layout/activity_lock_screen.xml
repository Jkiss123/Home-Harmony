<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Lock Icon -->
    <ImageView
        android:id="@+id/ivLockIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_lock"
        app:tint="@color/g_blue"
        app:layout_constraintBottom_toTopOf="@+id/tvLockReason"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Lock Reason Text -->
    <TextView
        android:id="@+id/tvLockReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:text="Phiên làm việc đã hết hạn\nVui lòng xác thực lại"
        android:textColor="@color/g_gray700"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvUserEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLockIcon" />

    <!-- User Email -->
    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_light"
        android:text=""
        android:textColor="@color/g_blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAuthenticate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLockReason" />

    <!-- Authenticate Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAuthenticate"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:text="Xác thực"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_light"
        app:backgroundTint="@color/g_blue"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserEmail" />

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="48dp"
        android:text="Đăng xuất"
        android:textColor="@color/g_red"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAuthenticate" />

    <!-- Security Info -->
    <TextView
        android:id="@+id/tvSecurityInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_light"
        android:text="Session Timeout"
        android:textColor="@color/g_gray700"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>