<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgShadow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="#88D9FA"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgeColor"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@color/g_gray500"
        app:layout_constraintStart_toStartOf="@id/imgShadow"
        app:layout_constraintEnd_toEndOf="@id/imgShadow"
        app:layout_constraintTop_toTopOf="@id/imgShadow"
        app:layout_constraintBottom_toBottomOf="@id/imgShadow"/>
    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_picked"
        android:text="X"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/imgeColor"
        app:layout_constraintEnd_toEndOf="@id/imgeColor"
        app:layout_constraintTop_toTopOf="@id/imgeColor"
        app:layout_constraintBottom_toBottomOf="@id/imgeColor"
        android:textColor="@color/white"/>



</androidx.constraintlayout.widget.ConstraintLayout>